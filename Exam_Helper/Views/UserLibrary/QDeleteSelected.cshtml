@model List<Question>

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" style="color:darkred">Вы точно хотите удалить?</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    </div>

    <hr />
    <div class="modal-body">
        <dl class="row">
            <dt class="col-sm-10">
                Список вопросов:
            </dt>
            @foreach(var question in Model)
            {
                <dd class="col-sm-10">
                    @question.Title
                </dd>
            }
            
        </dl>
    </div>

    <div class="modal-footer">
        <div class="form-group">
            <div class="d-flex">
                <button type="submit" class="btn btn-danger" onclick="QDeleteSelectedComfirm()" data-dismiss="modal">Удалить</button>|
                <button type="button" class="btn btn-light" data-dismiss="modal">Вернуться с библиотеку</button>
            </div>

        </div>
    </div>

</div>

<script>
    function QDeleteSelectedComfirm() {
        $.ajax({
            type: "POST",
            url: 'UserLibrary/QDeleteSelectedComfirmed',
            data: { id: '@Model.Select(x=>x.Id)' },
            success: function (dqs) {
                for (var dq in dqs) {
                    $('div[data-fordisabling="' + dq + '"]').remove();
                }
            },
            error: function () {
            }
        });
    };
</script>