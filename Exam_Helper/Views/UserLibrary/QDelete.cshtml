@model Exam_Helper.Question

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" style="color:darkred">Are you sure you want to delete this?</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    </div>

    <hr />
    <div class="modal-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Definition)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Definition)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Proof)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Proof)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Author)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Author)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpdateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TagIds)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TagIds)
            </dd>
        </dl>
    </div>

    <div class="modal-footer">
        <div class="form-group">
            <div class="d-flex">
                <button type="submit" class="btn btn-danger" data-dismiss="modal" onclick="QDeleteConfirmed()">Удалить</button>|
                <button type="button" class="btn btn-light" data-dismiss="modal">Вернуться с библиотеку</button>
            </div>

        </div>
    </div>

</div>


<script>
        function QDeleteConfirmed(){

            $.ajax({
                type: 'POST',
                url: 'UserLibrary/QDeleteConfirmed',
                data: { id: parseInt('@Model.Id') },
                success: function () {
                    location.reload();
                },
                error: function () {
                    alert("Что-то пошло не так...");
                }
            });
        }
</script>