@model Exam_Helper.ViewsModel.ClassForPublicLibrary
@{
    ViewData["Title"] = "Library Page";
}

<main class="container">
    <div class="container">

        <div class="justify-content text-center h1">
            <span>Библиотека</span>
        </div>

        <hr color="brown" />

        <div class="container d-flex bd-highlight pt-3">
            <button class="btn btn-primary" type="button" id="button_Que" data-toggle="collapse" data-target="#collapseAllQuestion" aria-expanded="true" aria-controls="collapseAllQuestion">
                Вопросы
            </button>
            <button class="btn btn-primary ml-1" type="button" id="button_Pack" data-toggle="collapse" data-target="#collapseAllPacks" aria-expanded="true" aria-controls="collapseAllPacks">
                Паки
            </button>
        </div>
        <div class="form-group pb-3 bd-highlight ml-auto p-2">
            <span class="mr-3"> Поиск вопроса: </span>
            <form asp-action="Index">
                <input type="text" name="SearchString" class="form-control">
            </form>
        </div>
        <div class="collapse show" id="collapseAllQuestion">
            @foreach (var item in Model.questions)
            {
                <div class="accordion" id="accordionExample">
                    <div class="card border border-info mt-1 shadow mb-3 bg-white rounded">
                        <div class="card-header bg-white d-flex justify-content-between" id="headingOne">
                            <button class="btn" type="button" data-toggle="collapse" data-target="#collapse_@item.Id.ToString()" aria-expanded="false" aria-controls="collapse_@item.Id.ToString()">
                                <span class="h4">@item.Title </span>
                            </button>
                            <div class="btn-group  w-25">
                                <button type="button" class="btn collapse btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="collapse_@item.Id.ToString()" data-parent="#accordionExample">
                                    Action
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="QRedirectToTest" asp-route-id="@item.Id">Tests</a>
                                    <a class="dropdown-item" asp-action="QRedirectToTest" asp-route-id="@item.Id">Tests</a>
                                    <a class="dropdown-item" asp-action="QRedirectToTest" asp-route-id="@item.Id">Tests</a>
                                    <a class="dropdown-item" asp-action="QRedirectToTest" asp-route-id="@item.Id">Tests</a>
                                </div>
                            </div>
                        </div>

                        <div id="collapse_@item.Id.ToString()" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body  d-flex flex-column">
                                <div class="alert alert-info text-center tags"> @Html.DisplayFor(modelItem => item.TagIds)</div>
                                <span class="h6 mt-2">@Html.DisplayFor(modelItem => item.Definition) </span>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
        <div class="collapse" id="collapseAllPacks">
            @foreach (var item in Model.packs)
            {
                <div class="accordion" id="accordionExample">
                    <div class="card border border-info mt-2 shadow mb-3 bg-white rounded">
                        <div class="card-header bg-white d-flex justify-content-between" id="headingOne">
                            <button class="btn" type="button" data-toggle="collapse" data-target="#collapse_@item.Id.ToString()" aria-expanded="false" aria-controls="collapse_@item.Id.ToString()">
                                <span class="h4"> @Html.DisplayFor(modelItem => item.Name) </span>
                            </button>
                        </div>
                        <div id="collapse_@item.Id.ToString()" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body  d-flex flex-column">
                                @foreach (var quesId in item.QuestionSet.Split(";"))
                                {
                                    <div class="d-flex justify-content-between pt-3 pb-3">
                                        @Html.DisplayFor(model => model.questions.Find(x => x.Id.ToString() == quesId).Title)
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>

</main>


<script>

    $("#button_Que").click(function () {
        $('#collapseAllPacks').removeClass('show')
    });
    $("#button_Pack").click(function () {
        $('#collapseAllQuestion').removeClass('show')
    });

</script>