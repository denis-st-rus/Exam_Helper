@model IEnumerable<Exam_Helper.Question>
@{
    ViewData["Title"] = "Library Page";
}


<main class="container" style="padding-top: 3vh;">
    <div class="container">

        <div class="justify-content text-center h1">
            <span>Библиотека</span>
        </div>

        <hr color="brown" />

        <div class="d-flex  bd-highlight pt-3 pb-3">
            <button name="Create" asp-action="Create" type="button" class="btn btn-warning bd-highlight">Добавить Вопрос</button>

            <div class="form-group pt-3 pb-3 bd-highlight ml-auto p-2"></div>
            <span class="mr-3"> Поиск вопроса: </span>
            <form asp-controller="QuestionsLib" asp-action="Index">
                <input type="text" name="SearchString" class="form-control">
            </form>
        </div>
    </div>

    <div class="pt-3">
        <!-- Массив вопросов, отображение потом настроим -->
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Definition)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Proof)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Author)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreationDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UpdateDate)
                        </th>
                        <th>
                            Tags
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Definition)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Proof)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreationDate.GetDateTimeFormats()[0])
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdateDate.GetDateTimeFormats()[0])
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TagIds)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

    </div>
</main>